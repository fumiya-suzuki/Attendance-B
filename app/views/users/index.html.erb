<% provide(:title, 'All Users') %>

<% if params[:search].present? %>
  <h1>検索結果</h1>
<% else %>
  <h1>ユーザー一覧</h1>
<% end %>

<div class ="border border-muted search">
  <p>検索</p>
    <%= form_tag users_path, method: 'get' do %>
      <%= text_field_tag :search, params[:search], class: "form-control form-search" %>
      <%= submit_tag '検索', :name => nil, class: "btn btn-lg btn-info search-btn" %>
    <% end %>
</div>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
    <% @users.each do |user| %>
      <div class="user-name"><%= link_to user.name, user %></div>
      <div>
        ❙　<%= link_to "削除", user, method: :delete,
            data: { confirm: "削除してよろしいですか？"},
            class: "btn btn-primary" %>
      <div class="jumbotron user-edit-btn">
        <%= link_to "編集", edit_basic_info_user_path(user), remote: true, class: "btn btn-primary btn-lg" %>
      </div>
      </div>
    <% end %>
  <%= will_paginate %>
</div>

<!--モーダルウインドウ表示-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>