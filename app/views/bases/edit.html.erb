<% provide(:title, 'Edit') %>
<h1>拠点登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>
      
      <%= f.label :base_number, class: "label-signup" %>
      <%= f.number_field :base_number, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-signup" %>
      <%= f.text_field :base_name, class: "form-control" %>

      <%= f.label :base_type, class: "label-signup" %>
      <%= f.select :base_type, [["出勤", "出勤"], ["退勤","退勤"]],
          {include_blank: "選択してください"},{class: "form-control"} %>

      <%= f.submit "編集", class: "btn btn-primary btn-block btn-base-edit" %>
    <% end %>
  </div>
</div>